<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hillaryslavik.basiccalculator.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNum"
        android:width="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/total"
        android:layout_toStartOf="@+id/total"
        android:layout_x="91dp"
        android:layout_y="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondNum"
        android:width="100dp"
        android:layout_below="@+id/add"
        android:layout_alignLeft="@+id/firstNum"
        android:layout_alignStart="@+id/firstNum"
        android:layout_x="32dp"
        android:layout_y="85dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add"
        android:layout_alignTop="@+id/firstNum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_x="222dp"
        android:layout_y="17dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/subtract"
        android:layout_alignTop="@+id/secondNum"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add"
        android:layout_x="232dp"
        android:layout_y="135dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/total"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_x="132dp"
        android:layout_y="270dp"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Num1:"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/firstNum"
        android:layout_toLeftOf="@+id/firstNum"
        android:layout_toStartOf="@+id/firstNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Num2:"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/subtract"
        android:layout_toLeftOf="@+id/secondNum"
        android:layout_toStartOf="@+id/secondNum" />

</RelativeLayout>
